<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            width: 100%;
            height: auto;
            font-weight: bold;
            text-align: center;
            overflow: auto;
            align-items: center;
            text-align: center;
            border: 1px solid black;
            font: 75% georgia, sans-serif;

        }

        .panel {
            margin: 10px;
            padding: 10px;
            background: #f1f3ec;
            font: 100% georgia, sans-serif;

        }

    </ui:style>

        <g:HTMLPanel styleName="{style.panel}">


            <br></br><b><center>  Name:</center></b><br></br>
            <g:TextBox addStyleNames="{style.important}" ui:field="nameMail"></g:TextBox>
            <br></br><br><center><b>Theme:</b></center></br><br></br>
            <g:TextBox addStyleNames="{style.important}" ui:field="themName"></g:TextBox>
            <br></br> <br><center>Text:</center></br><br></br>
            <g:RichTextArea addStyleNames="{style.important}" ui:field="sendMailBox"></g:RichTextArea>
            <br></br><br></br>
            <g:Button addStyleNames="{style.important}" ui:field="sendMail">send</g:Button>
        </g:HTMLPanel>

</ui:UiBinder>