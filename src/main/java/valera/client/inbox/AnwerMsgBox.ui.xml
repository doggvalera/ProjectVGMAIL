<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


        <ui:style>

        .important {
        font-weight: bold;
            align-items: center;
            font: 100% georgia, sans-serif;



        }

        .panel {
        background-color: ivory;
        }
        .errorlbl{
            color: red;
        }
        </ui:style>
        <g:HTMLPanel>

            <g:VerticalPanel styleName="{style.panel}" ui:field="vPanelReg">
                <g:Label styleName="{style.errorlbl}" ui:field="error"></g:Label>
                <g:Label ui:field="labelSendName">Name:</g:Label>
                <g:TextBox styleName="{style.important}" ui:field="nameMail"></g:TextBox>
                <g:Label ui:field="labelSendTheme">Theme:</g:Label>
                <g:TextBox styleName="{style.important}"  ui:field="themName"></g:TextBox>
                <g:RichTextArea styleName="{style.important}" ui:field="sendMailBox"></g:RichTextArea>
                <g:Button styleName="{style.important}" ui:field="sendMail">Send Mail</g:Button>
                <g:Button styleName="{style.important}" ui:field="close">Close</g:Button>

            </g:VerticalPanel>
        </g:HTMLPanel>

</ui:UiBinder>