<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .cellTable {
            border-bottom: 1px solid #ccc;
            text-align: left;
            margin-bottom: 4px;
        }

        .panel {
            overflow:scroll;
        }

        .richText{
            width: 100%;
            height: auto;
        }
        .button{

        }
    </ui:style>

    <g:HTMLPanel>

        <g:VerticalPanel styleName="{style.panel}" ui:field="vPanel">
            <c:CellTable addStyleNames='{style.cellTable}' pageSize='15' ui:field='cellTable'/>
            <c:SimplePager ui:field='pager'/>
            <g:RichTextArea styleName="{style.richText}" ui:field="mailTextArea"/>
            <g:Button styleName="{style.button}" ui:field="answerButton">Answer</g:Button>
        </g:VerticalPanel>
    </g:HTMLPanel>

</ui:UiBinder>