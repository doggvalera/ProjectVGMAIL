<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            width: 50%;
            height: 50%;
            font-weight: bold;
            text-align: center;


        }
        .navPanel1{

            width: 50%;
            height: 50%;
            overflow: auto;
            margin: auto;
            position: absolute;
            top: 0; left: 0; bottom: 0; right: 0;
        }

        .divider {
            height: 1000px;
            width: 1000px;
            background: #999999;
        }

    </ui:style>

        <g:HTMLPanel>

            <g:VerticalPanel addStyleNames="{style.divider}" ui:field="vPanel">

            <g:Button addStyleNames="{style.important}" ui:field="refresh">refresh</g:Button>
           </g:VerticalPanel>
        </g:HTMLPanel>

</ui:UiBinder>